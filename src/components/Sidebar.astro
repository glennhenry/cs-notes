---
import ObsidianSidebar from "starlight-theme-obsidian/overrides/Sidebar.astro";
---

<ObsidianSidebar />

<script>
  const activeLink = document.querySelector('.sidebar a[aria-current="page"]');

  if (activeLink && activeLink.scrollIntoView) {
    activeLink.scrollIntoView({"block": "center"});
  }
</script>
